{
  "compilerOptions": {
    "lib": ["ESNext"],                 
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./typedoc.ts"
  ],
  "exclude": [
    "@types"
  ]
}
